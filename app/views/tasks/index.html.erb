<p id="notice"><%= notice %></p>

<h1>Listing Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Task</th>
      <th>Project</th>
      <th>Title</th>
      <th>Open</th>
      <th>Created at</th>
      <th>Updated at</th>
      <th>Priority</th>
      <th>Position</th>
      <th>Assignee</th>
      <th>Project</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.id %></td>
        <td><%= task.project_id %></td>
        <td><%= task.title %></td>
        <td><%= task.open %></td>
        <td><%= task.created_at %></td>
        <td><%= task.updated_at %></td>
        <td><%= task.priority %></td>
        <td><%= task.position %></td>
        <td><%= task.assignee_id %></td>
        <td><%= link_to 'Show', project_task_path(@project, task) %></td>
        <td><%= link_to 'Edit', edit_project_task_path(@project, task) %></td>
        <td><%= link_to 'Destroy', project_task_path(params[:project_id], task), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

