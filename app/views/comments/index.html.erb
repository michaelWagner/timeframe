<p id="notice"><%= notice %></p>

<h1>Listing Comments</h1>

<table>
  <thead>
    <tr>
      <th>Comment</th>
      <th>Task</th>
      <th>Created at</th>
      <th>Updated at</th>
      <th>Author</th>
      <th>Task</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.id %></td>
        <td><%= comment.task_id %></td>
        <td><%= comment.created_at %></td>
        <td><%= comment.updated_at %></td>
        <td><%= comment.author_id %></td>
        <td><%= comment.task %></td>
        <td><%= link_to 'Show', project_task_comment_path(@project, @task, comment) %></td>
        <td><%= link_to 'Edit', edit_project_task_comment_path(params[:project_id], params[:task_id], comment) %></td>
        <td><%= link_to 'Destroy', project_task_comment_path(@project, @task, comment), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Comment', new_project_task_comment_path %>
